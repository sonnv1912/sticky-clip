{
   "name": "sticky-clip",
   "private": true,
   "scripts": {
      "-------------------------------- DESKTOP --------------------------------": "",
      "desktop": "turbo watch dev --filter=desktop",
      "build-desktop": "turbo run build --filter=desktop",
      "-------------------------------- WEBSITE --------------------------------": "",
      "web": "turbo watch web --filter=web",
